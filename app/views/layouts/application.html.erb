<!DOCTYPE html>
<html>
<head>
  <title>Get Fashions</title>

  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= favicon_link_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <%= csrf_meta_tags %>

  <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/imask/3.4.0/imask.min.js"></script>

   <script type="text/javascript">

   </script>
</head>
<body>

<body class="<%= params[:controller] %> <%=params[:action]%>">
  <% unless current_page?(root_path) %>
<h1 class="chat-header"> Chat with us!<span class="hideChat">hide</span></h1>
<div class="chat-window">
  <div class="chat-history"></div>
</div>
<div class="chat-input">
  <%= render :partial => "chatbot/chat" %>
</div>
<div class="showChat">
  <i class="fa fa-comment-o" aria-hidden="true"></i> Contact us!
</div>
<% end %>

<div class='spacer'></div>
  <div>
  <% if notice %>
    <h6 class="alert alert-success text-center msg"><%= flash[:notice]%></h6>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger text-center msg"><%= alert %></p>
  <% end %>
  </div>
<%= yield %>
</body>
</html>
